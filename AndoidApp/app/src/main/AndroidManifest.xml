<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.soundclassificationapp">
    <!--
    RECORD_AUDIO is considered a "dangerous" permission because it may pose a risk to the user's
    privacy. Starting with Android 6.0 (API level 23) an app that uses a dangerous permission must
    ask the user for approval at run time. After the user has granted permission, the app should
    remember and not ask again. The code implements this behavior using
    MainActivity.requestPermissions().
    -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/speech_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/speech_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".InferenceResultActivity"
            android:parentActivityName=".SpeechActivity">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SpeechActivity" />
        </activity>
        <activity android:name=".SpeechActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>